generator client {
  provider = "prisma-client-js"
  moduleFormat = "esm"
  generatedFileExtension = "js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  passwordHash String 
  role Role
  otps  Otp[]
}

model Otp {
  id        Int      @id @default(autoincrement())
  code      Int
  email     String   
  user      User     @relation(fields: [email], references: [email])
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

enum Role {
  CANDIDATE 
  RECRUITER
  ADMIN
}
